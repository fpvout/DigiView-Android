<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_logo">
        <item name="android:fontFamily">@font/gidolinya</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16dp</item>
        <item name="android:lineSpacingMultiplier">0.77</item>
        <item name="android:letterSpacing">0.22</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="text_status">
        <item name="android:fontFamily">@font/gidolinya</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">12</item>
    </style>
</resources>